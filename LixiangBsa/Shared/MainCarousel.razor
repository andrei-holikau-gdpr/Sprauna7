@using Lixiang.CoreBusiness;

<div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        @{
            int i = 0;

            @foreach (var img in CarOptionForComponent.Images)
            {
                if (i == 0)
                {
                    <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="@i" aria-label="@img.Alt" class="active" aria-current="true"></button>
                }
                else
                {
                    <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="@i" aria-label="@img.Alt"></button>
                }
                i++;
            }
            //int count = CarOptionForComponent.Images.Count;
            //while (i < 8)
            //{
            //    var newI = i - count;
            //    <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="@i" aria-label="@CarOptionForComponent.Images[newI].Alt"></button>
            //    i++;
            //}
        }
    </div>
    <div class="carousel-inner">
        @{
            int j = 0;
            @foreach (var img in CarOptionForComponent.Images)
            {
                if (j == 0)
                {
                    <div class="carousel-item active">
                        <img class="bd-placeholder-img" width="100%" height="100%" src="/img/@img.FileName" alt="@img.Alt">
                        <div class="container"></div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="bd-placeholder-img" width="100%" height="100%" src="/img/@img.FileName" alt="@img.Alt">
                        <div class="container"></div>
                    </div>
                }
                j++;
            }

            //while (j < 8)
            //{
            //    var newJ = j - count;
            //    <div class="carousel-item">
            //        <img class="bd-placeholder-img" width="100%" height="100%" src="/img/@CarOptionForComponent.Images[newJ].FileName" alt="@CarOptionForComponent.Images[newJ].Alt">
            //        <div class="container"></div>
            //    </div>
            //    i++;
            //}
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

@code {
    #region private fields
    [Parameter]
    public CarColorOption CarOptionForComponent { get; set; } = new();
    #endregion
}
