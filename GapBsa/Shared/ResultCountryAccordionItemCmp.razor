@using Gap.CoreBusiness;

<div class="accordion-item">
    <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#flush-collapse-@ResultCountryParameter?.Id"
                aria-expanded="false"
                aria-controls="flush-collapse-@ResultCountryParameter?.Id">
            @ResultCountryParameter?.Country?.Name
        </button>
    </h2>
    <div id="flush-collapse-@ResultCountryParameter?.Id"
         class="accordion-collapse collapse">
        @*data-bs-parent="#@AccordionId"*@
        <div class="accordion-body">
            @((MarkupString)ResultCountryParameter?.Description)
        </div>
    </div>
</div>

@code {
    #region Parameters
    [Parameter]
    public ResultCountry ResultCountryParameter { get; set; } = new();
    [Parameter]
    public string? AccordionId { get; set; } = "";
    #endregion
}
