@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Повторно отправить подтверждение на email";
}

<div class="ld-outer">
    <div class="ld-inner">
        <div class="ld-card">
            <h1 class="h3">@ViewData["Title"]</h1>
            <br />
            <div class="row">
                <div class="col-md-12 mt-3">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Отправить</button>
                    </form>
                    <partial name="_LinkLoginRV" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
