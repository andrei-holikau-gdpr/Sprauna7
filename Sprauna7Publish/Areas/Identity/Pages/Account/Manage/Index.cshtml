@page
@model IndexModel
@{
    ViewData["Title"] = "Профиль";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<div>

    <h3>@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="profile-form" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12 my-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.ProfilePicture" style="width: 100%;"></label>
                    @if (Model.Input.ProfilePicture != null)
                    {
                        <img id="profilePicture" style="width:120px;height:120px; object-fit:cover; border-radius:50%;" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                    }
                    else
                    {
                        <img id="profilePicture" style="width:120px;height:120px; object-fit:cover; border-radius:50%;" src="~/images/person.jpg">

                    }
                    <input type="file"
                           accept=".png,.jpg,.jpeg,.gif"
                           asp-for="Input.ProfilePicture"
                           class="form-control custom-file-input"
                           onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Пожалуйста, выберите ваш логин." disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
            
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Пожалуйста введите ваш номер телефона." />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.FistName" class="form-control" placeholder="Имя" />
                    <label asp-for="Input.FistName" class="form-label"></label>
                    <span asp-validation-for="Input.FistName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control" placeholder="Фамилия" />
                    <label asp-for="Input.LastName" class="form-label">Фамилия</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12 mt-3">
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Сохранять</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
